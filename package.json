{
  "name": "@flowxcode/njs-core",
  "version": "1.0.2",
  "description": "Core utilities for Next.js projects including DB connector and logger",
  "main": "dist/cjs/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "default": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:types",
    "build:cjs": "npx tsc --project tsconfig.json --module commonjs --outDir dist/cjs",
    "build:types": "npx tsc --project tsconfig.json --emitDeclarationOnly --outDir dist/types",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test:build": "npx tsc --project tsconfig.json --noEmit"
  },
  "keywords": [
    "nextjs",
    "core",
    "utils",
    "db",
    "logger"
  ],
  "author": "flowxcode",
  "license": "MIT",
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/flowxcode/njs-core.git"
  },
  "devDependencies": {
    "@types/pg": "^8.10.9",
    "@types/winston": "^2.4.4",
    "rimraf": "^5.0.5",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "next": "^15.0.0",
    "pg": "^8.12.0",
    "winston": "^3.13.1"
  }
}